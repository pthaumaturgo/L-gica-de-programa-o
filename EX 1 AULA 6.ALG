Algoritmo "EX 1 AULA 6"
// SITUAÇÃO 1: aniversário. quantas velas colocar no bolo?
Var
   ano_nasc, ano_atual, idade: inteiro
   
Inicio
      ano_atual <- (2024)
   Escreval ("Em que ano nós estamos?", ano_atual)
   Escreval ("Em que ano você nasceu?")
   Leia (ano_nasc)
   idade <- (ano_atual - ano_nasc)
   Escreval ("A quantidade de velas será: ", idade)

Fimalgoritmo